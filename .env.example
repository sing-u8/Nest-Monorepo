# Application Configuration Example
# Copy this file to .env.local or .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
APP_NAME=Auth Service
APP_VERSION=1.0.0
APP_DESCRIPTION=NestJS Authentication Service with Clean Architecture

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PREFIX=api/v1
API_ENABLE_CORS=true
API_CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# =============================================================================
# SECURITY SETTINGS - JWT
# =============================================================================
# IMPORTANT: Generate secure random secrets for production
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-replace-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-replace-in-production
JWT_ISSUER=auth-service
JWT_AUDIENCE=auth-service-users
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# =============================================================================
# DATABASE CONFIGURATION - PostgreSQL
# =============================================================================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=auth_user
DATABASE_PASSWORD=auth_password
DATABASE_NAME=auth_service_db
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30000

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/social/google/callback

# Apple Sign In
APPLE_CLIENT_ID=your.apple.client.id
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/social/apple/callback

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=true

# =============================================================================
# REDIS CONFIGURATION (Optional - for future caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=./logs/auth-service.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_ENABLE_RATE_LIMITING=false
SECURITY_ENABLE_HELMET=true
SECURITY_ENABLE_MTLS=false

# mTLS Configuration (for production)
SECURITY_MTLS_CA_PATH=./certs/ca.pem
SECURITY_MTLS_CERT_PATH=./certs/server.pem
SECURITY_MTLS_KEY_PATH=./certs/server-key.pem

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLE_METRICS=false
MONITORING_METRICS_PATH=/metrics
MONITORING_ENABLE_HEALTH_CHECK=true
MONITORING_HEALTH_CHECK_PATH=/health