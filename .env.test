# Test Environment Configuration
NODE_ENV=test
PORT=3001
APP_NAME=Auth Service - Test
APP_VERSION=1.0.0-test
APP_DESCRIPTION=NestJS Authentication Service - Test Environment

# API Configuration
API_PREFIX=api/v1
API_ENABLE_CORS=true
API_CORS_ORIGIN=*

# JWT Configuration - Test Keys
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
JWT_ISSUER=auth-service-test
JWT_AUDIENCE=auth-service-users-test
JWT_ACCESS_TOKEN_EXPIRATION=1h
JWT_REFRESH_TOKEN_EXPIRATION=1d

# Database Configuration - Test (use in-memory or separate test DB)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USERNAME=auth_test
DATABASE_PASSWORD=test_password
DATABASE_NAME=auth_service_test
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false
DATABASE_MAX_CONNECTIONS=1
DATABASE_CONNECTION_TIMEOUT=5000

# OAuth - Test (use mock credentials)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/social/google/callback

APPLE_CLIENT_ID=test.apple.client.id
APPLE_TEAM_ID=TEST123456
APPLE_KEY_ID=TEST123456
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nTEST_PRIVATE_KEY\n-----END PRIVATE KEY-----
APPLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/social/apple/callback

# Logging - Test (minimal logging)
LOG_LEVEL=error
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=false

# Security - Test (disabled for faster testing)
SECURITY_ENABLE_RATE_LIMITING=false
SECURITY_ENABLE_HELMET=false
SECURITY_ENABLE_MTLS=false

# Monitoring - Test
MONITORING_ENABLE_METRICS=false
MONITORING_ENABLE_HEALTH_CHECK=false