# Production Environment Configuration
# IMPORTANT: Update all secrets and credentials before deploying to production!

NODE_ENV=production
PORT=3000
APP_NAME=Auth Service
APP_VERSION=1.0.0
APP_DESCRIPTION=NestJS Authentication Service - Production

# API Configuration
API_PREFIX=api/v1
API_ENABLE_CORS=false
API_CORS_ORIGIN=https://yourapp.com,https://api.yourapp.com

# JWT Configuration - MUST BE REPLACED WITH SECURE SECRETS
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_IN_PRODUCTION
JWT_REFRESH_SECRET=REPLACE_WITH_SECURE_REFRESH_SECRET_IN_PRODUCTION
JWT_ISSUER=auth-service
JWT_AUDIENCE=auth-service-users
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Database Configuration - Production
DATABASE_TYPE=postgres
DATABASE_HOST=your-production-db-host
DATABASE_PORT=5432
DATABASE_USERNAME=auth_prod_user
DATABASE_PASSWORD=REPLACE_WITH_SECURE_DB_PASSWORD
DATABASE_NAME=auth_service_prod
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=30000

# OAuth - Production
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=REPLACE_WITH_PRODUCTION_GOOGLE_SECRET
GOOGLE_CALLBACK_URL=https://api.yourapp.com/api/v1/auth/social/google/callback

APPLE_CLIENT_ID=your.production.apple.client.id
APPLE_TEAM_ID=YOUR_PRODUCTION_TEAM_ID
APPLE_KEY_ID=YOUR_PRODUCTION_KEY_ID
APPLE_PRIVATE_KEY=REPLACE_WITH_PRODUCTION_APPLE_PRIVATE_KEY
APPLE_CALLBACK_URL=https://api.yourapp.com/api/v1/auth/social/apple/callback

# Email Configuration - Production
SMTP_HOST=your-production-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-production-email@yourapp.com
SMTP_PASSWORD=REPLACE_WITH_PRODUCTION_EMAIL_PASSWORD
SMTP_SECURE=true

# Redis Configuration - Production
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_PRODUCTION_REDIS_PASSWORD
REDIS_DB=0

# Logging - Production
LOG_LEVEL=warn
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=true
LOG_FILE_PATH=/var/log/auth-service/auth-service.log

# Security - Production (all enabled)
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_ENABLE_HELMET=true
SECURITY_ENABLE_MTLS=true

# mTLS Configuration - Production
SECURITY_MTLS_CA_PATH=/etc/ssl/certs/ca.pem
SECURITY_MTLS_CERT_PATH=/etc/ssl/certs/server.pem
SECURITY_MTLS_KEY_PATH=/etc/ssl/private/server-key.pem

# Monitoring - Production
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PATH=/metrics
MONITORING_ENABLE_HEALTH_CHECK=true
MONITORING_HEALTH_CHECK_PATH=/health