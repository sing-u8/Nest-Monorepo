# Test Environment Configuration
NODE_ENV=test
PORT=3000

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-environment-only-very-long-secret
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-environment-only-very-long-secret
JWT_ISSUER=auth-service-test
JWT_AUDIENCE=auth-api-test
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Database Configuration (Test Database)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=test_user
DATABASE_PASSWORD=test_password
DATABASE_NAME=test_auth_db
DATABASE_SYNCHRONIZE=true
DATABASE_DROP_SCHEMA=true
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2

# Security Configuration
SECURITY_ENABLE_RATE_LIMITING=false
SECURITY_ENABLE_HELMET=true
SECURITY_ENABLE_MTLS=false
API_ENABLE_CORS=true

# OAuth Configuration (Test Values)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

APPLE_CLIENT_ID=test-apple-client-id
APPLE_TEAM_ID=test-apple-team-id
APPLE_KEY_ID=test-apple-key-id
APPLE_PRIVATE_KEY=test-apple-private-key
APPLE_CALLBACK_URL=http://localhost:3000/auth/apple/callback

# Monitoring Configuration
MONITORING_ENABLE_HEALTH_CHECK=true
MONITORING_ENABLE_METRICS=false
MONITORING_HEALTH_CHECK_PATH=/health

# Logging Configuration
LOG_LEVEL=error
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=false

# API Configuration
API_PREFIX=api/v1

# Test-specific settings
TEST_VERBOSE=false