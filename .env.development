# Development Environment Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Auth Service - Development
APP_VERSION=1.0.0-dev
APP_DESCRIPTION=NestJS Authentication Service - Development Environment

# API Configuration
API_PREFIX=api/v1
API_ENABLE_CORS=true
API_CORS_ORIGIN=http://localhost:3000,http://localhost:4200,http://localhost:8080

# JWT Configuration - Development Keys (NOT for production)
JWT_SECRET=dev-jwt-secret-key-not-for-production-use
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production-use
JWT_ISSUER=auth-service-dev
JWT_AUDIENCE=auth-service-users-dev
JWT_ACCESS_TOKEN_EXPIRATION=60m
JWT_REFRESH_TOKEN_EXPIRATION=30d

# Database Configuration - Development
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=auth_dev
DATABASE_PASSWORD=dev_password
DATABASE_NAME=auth_service_dev
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true
DATABASE_MAX_CONNECTIONS=5
DATABASE_CONNECTION_TIMEOUT=10000

# OAuth - Development (use test credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/social/google/callback

APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/social/apple/callback

# Logging - Development
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false

# Security - Development (relaxed for ease of development)
SECURITY_ENABLE_RATE_LIMITING=false
SECURITY_ENABLE_HELMET=true
SECURITY_ENABLE_MTLS=false

# Monitoring - Development
MONITORING_ENABLE_METRICS=false
MONITORING_ENABLE_HEALTH_CHECK=true