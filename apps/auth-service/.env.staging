# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Application Configuration
APP_NAME="Auth Service (Staging)"
APP_VERSION="1.0.0"
API_PREFIX="api"

# Database Configuration
DB_HOST=staging-db-host
DB_PORT=5432
DB_USERNAME=auth_user_staging
DB_PASSWORD=your-staging-password
DB_NAME=auth_service_staging
DB_SSL=true
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-staging-redis-password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-256-bits-minimum
JWT_REFRESH_SECRET=your-staging-refresh-secret-256-bits-minimum
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=auth-service-staging
JWT_AUDIENCE=auth-service-staging-users

# OAuth Configuration - Google (Staging)
GOOGLE_CLIENT_ID=your-staging-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
GOOGLE_REDIRECT_URI=https://staging.your-domain.com/api/auth/google/callback

# OAuth Configuration - Apple (Staging)
APPLE_CLIENT_ID=com.yourcompany.yourapp.staging
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-apple-staging-private-key\n-----END PRIVATE KEY-----"
APPLE_REDIRECT_URI=https://staging.your-domain.com/api/auth/apple/callback

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=200
RATE_LIMIT_AUTH_MAX=20
CORS_ALLOWED_ORIGINS=https://staging-frontend.your-domain.com,https://staging-admin.your-domain.com
CORS_ALLOWED_PATTERNS=^https://.*\.staging\.your-domain\.com$

# mTLS Configuration
ENABLE_MTLS=true
MTLS_CA_CERT_PATH=/etc/ssl/certs/staging-ca-cert.pem
MTLS_TRUSTED_SUBJECTS=CN=staging-service-client,CN=staging-admin-client

# Monitoring and Logging
ENABLE_STRUCTURED_LOGGING=true
ENABLE_SECURITY_LOGGING=true
LOG_LEVEL=DEBUG
LOG_BUFFER_SIZE=500
LOG_FLUSH_INTERVAL=5000

# Monitoring Configuration
MONITORING_ALERTING_INTERVAL=30000

# Health Check Configuration
HEALTH_CHECK_DATABASE_TIMEOUT=5000
HEALTH_CHECK_MEMORY_HEAP_THRESHOLD=150
HEALTH_CHECK_MEMORY_RSS_THRESHOLD=300

# External Service Timeouts
HTTP_TIMEOUT=20000
OAUTH_TIMEOUT=10000