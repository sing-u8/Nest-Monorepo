{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"module": "commonjs",
		"moduleResolution": "node10",
		"types": ["jest", "node"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@app/*": ["src/app/*"],
			"@config/*": ["src/config/*"],
			"@shared/*": ["src/shared/*"]
		}
	},
	"include": [
		"jest.config.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.d.ts"
	]
}
